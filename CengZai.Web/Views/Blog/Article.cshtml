@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Blog/_BlogLayout.cshtml";
    var Article = ViewBag.Article as CengZai.Model.Article;
}

    <!--内容区域-->
    <div class="article well">
        @if (!string.IsNullOrEmpty(Article.Title))
        {
        <div class="page-header"> 
            <h3>@Article.Title  <small class="font12" style="padding-left:50px">作者：@Html.GetUserNickname(Article.UserID) @Html.GetDateFormat(Article.PostTime, "yyyy-M-d HH:mm:ss") 阅读(@Article.ViewCount)</small></h3> 
        </div> 
        }
        <div class="art-content">@MvcHtmlString.Create(Article.Content)</div>
    </div>
    <!--/内容区域-->