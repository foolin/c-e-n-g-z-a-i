@{
    ViewBag.Title = "重置密码";
    var email = ViewBag.Email as string;
}

<div class="container bg-white">
<div class="padding">
    <div class="page-header"> 
        <h1>@ViewBag.Title</h1> 
    </div> 
    <div>
    @using (Html.BeginForm("ResetPassword","Account", FormMethod.Post, new { @class = "well" }))
    {
        <p>
            <label for="username">邮 箱： </label>
            @Html.TextBox("email", email, new { disabled = "disabled" })
            @Html.Hidden("email", email)
        </p>
        <p>
            <label for="password">新密码： </label>
            @Html.Password("password")
            <span class="muted">请输入新密码</span>
        </p>
        <p>
            <label for="repassword">重复密码： </label>
            @Html.Password("repassword")
            <span class="muted">请重复输入新密码</span>
        </p>
        <p>
            <input type="submit" class="btn btn-primary" value="保存" onclick="return confirm('确定重置密码？');" />
        </p>
    }
    
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
    <div class="alert alert-error">
        @MvcHtmlString.Create(ViewBag.Message)
    </div>
    }
</div>
</div>