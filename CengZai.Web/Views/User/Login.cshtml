@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>用户登录 - @ViewData["SiteName"]</title>
    <link href="../../css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../../css/login.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="container">
    <div class="header">
        <h1 class="logo"><a href="/">曾在网</a></h1>
        <div class="slogan">致力于挽救爱情的情感交友社区</div>
    </div>
    <hr />
    <div class="login-form">
        @using (Html.BeginForm()) {
            
            <p>
                <label for="username">邮 箱：</label>
                @Html.TextBox("email")
                @Html.ValidationMessage("email")
            </p>
            <p>
                <label for="password">密 码：</label>
                @Html.Password("password")
                @Html.ValidationMessage("password")
            </p>
                
            <p>
                @Html.CheckBox("rememberMe") <label class="inline" for="rememberMe">记住我</label>
            </p>
            <p class="btn-group">
                <input type="submit" class="btn btn-primary" value="登录" />
                @Html.ActionLink("尚未注册？", "Register", null, new { @class = "btn btn-danger" })
            </p>
            <p><a href="#">忘记密码？</a></p>
            <p>@Html.ValidationSummary()</p>
            
        }
    </div>
    <hr />
    <div class="link">
        <p class="pull-left">&copy 2012 @ViewData["SiteName"]<text>(</text>@ViewData["SiteDomain"])</p>
        <div class="pull-right">
            @Html.ActionLink("关于我们", "Us", "About") | 
            @Html.ActionLink("用户协议", "Agreement", "About") | 
            @Html.ActionLink("隐身政策", "Privacy", "About") | 
            <a href="http://www.miibeian.gov.cn" target="_blank">粤ICP备11056743号</a>
        </div>
    </div>
</div>
</body>
</html>