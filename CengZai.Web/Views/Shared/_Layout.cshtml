<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/js/html5.js")" type="text/javascript"></script>
    <![endif]-->
    <script src="@Url.Content("~/js/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")" type="text/javascript"></script>
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="img/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
    @RenderSection("head")
</head>

<body>
<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
	<div class="container">
		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		</a>
		<a class="brand logo" href="#">曾在网</a>
		<div class="nav-collapse">
		<ul class="nav">
			<li class="active"><a href="#home">首页</a></li>
			<li><a href="#profile">个人主页</a></li>
			<li><a href="#friend">好友</a></li>
            <li><a href="#message">唠叨</a></li>
            <li><a href="#search">搜索</a></li>
		</ul>
        <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="搜索感兴趣的人或事">
        </form>
        
		<!--<p class="navbar-text pull-right">Logged in as <a href="#">username</a></p>--> 
		<div class="navbar-text pull-right">
            <a href="#">私信</a> 
            <a href="#">邀请</a> 
			<a href="#">设置</a> 
			<a href="#">退出</a>
            @Html.ActionLink("退出", "Logout", "User")
		</div>
		</div><!--/.nav-collapse -->
	</div>
	</div>
</header>
<!-- navbar 结束 -->

@RenderBody()

<hr class="hr-gray" />

<footer class="container">
    <p class="pull-left">&copy 2012 @ViewData["SiteName"]<text>(</text>@ViewData["SiteDomain"])</p>
    <div class="pull-right">
        <a href="#about">关于我们</a> | 
        <a href="#about">使用条款</a> | 
        <a href="http://www.miibeian.gov.cn" target="_blank">粤ICP备11056743号</a>
    </div>
</footer>
</body>
</html>
