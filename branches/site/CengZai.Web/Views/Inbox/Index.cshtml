@{
    ViewBag.Title = "Index";
    var inboxList = ViewBag.InboxList as List<CengZai.Model.Inbox>;
}


<div class="container">
    <div class="row-fluid">
      <div class="span8 bg-white">
      <div class="padding">

            <h2>我的私信</h2> 

            <ul class="nav nav-tabs">
                <li class="active"><a href="#receive">收到私信</a></li>
                <li><a href="#systen">系统通知</a></li>
@*                <li><a href="#receive">收到</a></li>
                <li><a href="#send">已发送</a></li>*@
            </ul>
 
            <div class="tab-content">
                <div class="tab-pane active" id="all">
                    @if (inboxList == null)
                    {
                        <p>暂无任何私信</p>
                    }
                    else
                    {
                        <table class="table table-condensed">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>发送人</th>
                            <th>接收人</th>
                            <th>内容</th>
                            <th>时间</th>
                            <th>操作</th>
                          </tr>
                        </thead>
                        <tbody>
                         @foreach(CengZai.Model.Inbox inbox in inboxList)
                         {
                          <tr>
                            <td>@inbox.MsgID</td>
                            <td>@Html.GetUserNickname(inbox.FromUserID)</td>
                            <td>@Html.GetUserNickname(inbox.FromUserID)</td>
                            <td>@inbox.Content</td>
                            <td>@Html.GetDateFormat(inbox.SendTime, "yyyy-MM-dd HH:mm:ss")</td>
                            <td>@Html.ActionLink("回复","Send", new {touserid=inbox.FromUserID})</td>
                          </tr>
                         }
                        </tbody>
                      </table>
                    }
                </div>
                <div class="tab-pane" id="receive">...</div>
                <div class="tab-pane" id="send">...</div>
            </div>
 
            <script>
                $(function () {
                    $('.tabs a:last').tab('show')
                })
            </script>

      </div>
      </div>
      <!--.span8-->
      <div class="span4">
          <div class="well">
            @Html.ActionLink("发送私信", "Send", null, new { @class = "btn" })
            <hr />
          </div><!--/.well -->
      </div>
    </div>
    <!--/.span4 -->

</div>   
<!--/.container -->
