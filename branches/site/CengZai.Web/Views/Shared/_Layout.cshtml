<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/js/html5.js")" type="text/javascript"></script>
    <![endif]-->
    <script src="@Url.Content("~/js/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/mvc/MicrosoftAjax.js")" type="text/javascript"></script> 
    <script src="@Url.Content("~/js/mvc/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/mvc/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="img/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
    @RenderSection("head", false)
</head>

<body>
<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
	<div class="container">
		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		</a>
		<a class="brand logo" href="#">@ViewBag.SiteName</a>
		<div class="nav-collapse">
        @if (Html.IsLogin())
        {
		    <ul class="nav">
			    <li class="active">@Html.ActionLink("首页","Index","Home")</li>
                <li class="dropdown"> 
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">发表<b class="caret"></b></a> 
                    <ul class="dropdown-menu"> 
                        <li>@Html.ActionLink("日志", "PostText", "Article")</li> 
                        <li>@Html.ActionLink("照片", "PostImage", "Article")</li> 
                        <li class="divider"></li> 
                        <li>@Html.ActionLink("唠叨", "Send", "Message")</li> 
                    </ul> 
                </li>
                @*<li><a href="#message">唠叨<sup class="label label-important">2</sup></a></li>*@
                <li>@Html.ActionLink("姻缘", "Apply", "Lover")</li>
			    <li><a href="#friend">好友</a></li>
		    </ul>
            <form class="navbar-form pull-left" action="">
                <input type="text" class="search-query span2" placeholder="搜索感兴趣的人或事">
                <input type="submit" class="btn btn-info" value="搜索" />
            </form>
            <ul class="nav pull-right nav-mini-link">
                <li class="dropdown"> 
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">负卐零 <b class="caret"></b></a> 
                    <ul class="dropdown-menu"> 
                    <li><a href="#">修改密码</a></li> 
                    <li><a href="#">修改资料</a></li> 
                    <li class="divider"></li> 
                    <li>@Html.ActionLink("退出", "Logout", "User")</li> 
                    </ul> 
                </li>
                <li class="divider-vertical"></li> 
                <li><a href="#">私信<sup class="label label-success">2</sup></a></li>
                <li><a href="#">邀请</a></li> 
                <li>@Html.ActionLink("退出", "Logout", "User")</li>
            </ul>
        }
        else
        {
            <ul class="nav">
                <li>@Html.ActionLink("首页", "Login", "User")</li>
		    </ul>
            <p class="navbar-text pull-right">还有没有注册曾在网？ @Html.ActionLink("立刻注册","Register","User")</p>
        }
		</div><!--/.nav-collapse -->
	</div>
	</div>
</header>
<!-- navbar 结束 -->

@RenderBody()

<hr class="hr-gray" />

<footer class="container">
    <p class="pull-left">&copy 2012 @ViewData["SiteName"]<text>(</text>@ViewData["SiteDomain"])</p>
    <div class="pull-right">
        @Html.ActionLink("关于我们", "Us", "About") | 
        @Html.ActionLink("用户协议", "Agreement", "About") | 
        @Html.ActionLink("隐身政策", "Privacy", "About") | 
        <a href="http://www.miibeian.gov.cn" target="_blank">粤ICP备11056743号</a>
    </div>
</footer>
</body>
</html>
