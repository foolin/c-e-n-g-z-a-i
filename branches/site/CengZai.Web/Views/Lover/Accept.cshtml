                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="honeyUserID">申请人：</label>
                            <div class="controls">
                                @Html.GetUserNickname(lover.ApplyUserID)
                                <span class="field-validation-error" data-valmsg-for="honeyUserID" id="tips-honeyUserID" data-valmsg-replace="true"></span>
                                <p class="help-block">这是对方（申请人）名字</p>
                            </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="nickname">我的名字：</label>
                            <div class="controls">
