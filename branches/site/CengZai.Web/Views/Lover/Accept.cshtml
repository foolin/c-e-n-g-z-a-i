                                    <option value="1">男生宣誓1</option>
                                    <option value="2">男生宣誓2</option>
                                    <option value="3">男生宣誓3</option>
                                    <option value="4">女生宣誓1</option>
                                    <option value="5">女生宣誓2</option>
                                    <option value="6">女生宣誓3</option>
