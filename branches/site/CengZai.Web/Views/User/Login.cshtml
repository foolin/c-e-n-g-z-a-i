@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>用户登录 - @ViewData["SiteName"]</title>
    <link href="../../Content/css/base.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div>
    <h2>用户登录 - @ViewData["SiteName"]</h2>
    <p>
        请输入您的用户名和密码。如果您没有帐户请 @Html.ActionLink("注册", "Register")。
    </p>
    <span style="color:Red; font-weight:bold">@Html.ValidationSummary()</span>

    @using (Html.BeginForm()) {
        <div>
            <fieldset>
                <legend>帐户信息</legend>
                <p>
                    <label for="username">邮 箱：</label>
                    @Html.TextBox("email")
                    @Html.ValidationMessage("email")
                </p>
                <p>
                    <label for="password">密 码：</label>
                    @Html.Password("password")
                    @Html.ValidationMessage("password")
                </p>
                
                <p>
                    @Html.CheckBox("rememberMe") <label class="inline" for="rememberMe">记住密码?</label>
                </p>
                <p>
                    <input type="submit" value="登录" />
                </p>
            </fieldset>
        </div>
    }

    </div>
</body>
</html>