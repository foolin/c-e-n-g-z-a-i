@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Blog/_BlogLayout.cshtml";
    var boy = ViewBag.Boy as CengZai.Model.User;
    var girl = ViewBag.Girl as CengZai.Model.User;
    var boyArtList = ViewBag.BoyArtList as List<CengZai.Model.Article>;
    var girlArtList = ViewBag.GirlArtList as List<CengZai.Model.Article>;
}

    <!--内容区域-->
    <div class="article well">
    <div class="row-fluid">
        <!--boy content-->
        <div class="span6 boy">
        @if (boyArtList != null)
        {
            for (int i = 0; i < boyArtList.Count; i++)
            {
              <dl>
                <dt class="title">
                    @if (!string.IsNullOrEmpty(boyArtList[i].Title))
                    {
                        @Html.ActionLink(boyArtList[i].Title, "Article", new { username=boy.Username, artid=boyArtList[i].ArtID });
                    }
                </dt>
                <dd class="content">@Html.GetHtmlSubstring(boyArtList[i].Content, 200)@*@MvcHtmlString.Create(boyArtList[i].Content)*@</dd>
                <dd class="info">
                    <div class="row-fluid">
                        <span class="span6">@Html.ActionLink("阅读全文", "Article", new { username=boy.Username, artid=boyArtList[i].ArtID })  | <b>@boyArtList[i].ViewCount</b>次浏览</span>
                        <span class="span6" style="text-align:right; ">@Html.GetDateFormat(boyArtList[i].PostTime, "yyyy年M月d日")</span>
                    </div>
                </dd>
                @*<dd class="comment"></dd>*@
              </dl>
              <hr />
            }
        }
        </div>
        <!--/boy content-->
        <!--girl content-->
        <div class="span6 girl">
          @if (girlArtList != null)
          {
              for (int i = 0; i < girlArtList.Count; i++)
              {
              <dl>
                <dt class="title">
                    @if(!string.IsNullOrEmpty(girlArtList[i].Title))
                    {
                        @Html.ActionLink(girlArtList[i].Title, "Article", new { username = girl.Username, artid = girlArtList[i].ArtID });
                    }
                </dt>
                <dd class="content">@Html.GetAutoHtmlString(girlArtList[i].Content, 1000)</dd>
                <dd class="info">
                    <div class="row-fluid">
                        <span class="span6">@Html.ActionLink("阅读全文", "Article", new { username = girl.Username, artid = girlArtList[i].ArtID })  | <b>@girlArtList[i].ViewCount</b>次浏览</span>
                        <span class="span6" style="text-align:right; ">@Html.GetDateFormat(girlArtList[i].PostTime, "yyyy年M月d日") </span>
                    </div>
                </dd>
                @*<dd class="comment"></dd>*@
              </dl>
                <hr />
              }
          }
        </div>
        <!--/girl content-->

    </div>
    </div>
    <!--/内容区域-->

  <div class="pager">@Html.Pager()</div>

