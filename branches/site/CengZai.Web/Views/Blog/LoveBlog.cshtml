@{
    Layout = null;
    var blogUser = ViewBag.BlogUser as CengZai.Model.User;
    var blogLover = ViewBag.BlogLover as CengZai.Model.Lover;
    var loverUser = ViewBag.LoverUser as CengZai.Model.User;
    var boy = ViewBag.Boy as CengZai.Model.User;
    var girl = ViewBag.Girl as CengZai.Model.User;
    var artlist = ViewBag.BoyArtList as List<CengZai.Model.Article>;
    ViewBag.Title = boy.Nickname + "和" + girl.Username + "的情侣主页";
}
<!DOCTYPE HTML>
<html>
<head>
<meta charset="utf-8">
<title>@ViewBag.Title - @ViewBag.SiteName </title>
<link href="@Url.GetResourceUrl("/skin/default/blog.css")" rel="stylesheet" type="text/css" />
</head>

<body>
<ul class="btn-panel">
    <li><a href="#" class="icon btn-login" target="_blank">立即注册</a></li>
    <li><a href="#" class="icon btn-register">关注</a></li>
</ul>
<div class="blog-wrapper">
    <div class="blog-header">
		<div class="hd-boy">
			<div class="hd-avatar">
				<img src="@Url.GetAvatarUrl(boy.Avatar)" width="64" alt="" />
				<p><a href="">关注Ta</a></p>
			</div>
			<div class="hd-info">
				<h1><span class="muted">男主人</span> <a href="#">刘付灵</a></h1>
				<p class="sigin">@boy.Sign</p>
				<p class="sigin">http://www.cengzai.com</p>
			</div>
		</div>
		<div class="hd-love">
			<p>我们相恋</p>
			<p><b>19226</b>天</p>
		</div>
		<div class="hd-girl">
			<div class="hd-avatar">
				<img src="@Url.GetAvatarUrl(boy.Avatar)" width="64" alt="" />
				<p><a href="">关注Ta</a></p>
			</div>
			<div class="hd-info">
				<h1><a href="#">卢常春</a> <span class="muted">女主人</span></h1>
				<p class="sigin">@girl.Sign</p>
				<p class="sigin">http://www.cengzai.com</p>
			</div>
		</div>
		<div class="clear"></div>
    </div>

    <div class="blog-nav">
        <ul>
            <li><a href="#">首页</a></li>
            <li><a href="#">日志</a></li>
            <li><a href="#">留言</a></li>
            <li><a href="#">证书</a></li>
        </ul>
        @*<div class="clear"></div>*@
    </div>

    <div class="blog-body clearfix">
        <div class="boy-side">
        <div class="boy-side-inner">
            <div class="avatar"> 
                <img src="@Url.GetAvatarUrl(boy.Avatar)" width="150" alt="" />
            </div>
            <div class="info">
                <p class="name">@boy.Nickname</p>
                <p class="sign">@boy.Sign</p>
            </div>
            <div class="oath">
                <h2>爱情宣言</h2>
                <p class="sign">爱情宣言</p>
            </div>
        </div>
        </div>
        <div class="love-content">
            <div class="feed-list">
                   @if (artlist != null && artlist.Count > 0)
                   {
                       foreach (var art in artlist)
                       {
                           var artUser = Html.GetUser(art.UserID);
                            <section class="feed">

                                <article>
                                <cite><a href="@Url.Action("Blog", "Blog", new { username = artUser.Username })" target="_blank">@artUser.Nickname</a> 发表于 @Html.GetDateFormat(art.PostTime, "yyyy年M月d日 HH:mm:ss") </cite>
                                @if (!string.IsNullOrEmpty(art.Title))
                                {
                                    <h1>@Html.ActionLink(art.Title, "Article", "Blog", new { username = artUser.Username, artid = art.ArtID }, new { target = "_blank" })</h1>
                                }
                                <div class="art-body">
                                    @Html.GetHtmlSubstring(art.Content, 500)
                                </div>
                                <hr />
                                <footer>
                                     @Html.ActionLink("阅读全文", "Article", "Blog", new { username = artUser.Username, artid = art.ArtID }, new { target = "_blank" })
                                </footer>
                                </article>
                            </section>

                       }
                   }
                <div class="pager">@Html.Pager()</div>
            </div>
        </div>
        <div class="girl-side">
        <div class="girl-side-inner">
            <div class="avatar"> 
                <img src="@Url.GetAvatarUrl(girl.Avatar)" width="150" alt="" />
            </div>
            <div class="info">
                <p class="name">@girl.Nickname</p>
                <p class="sign">@girl.Sign</p>
            </div>
            <div class="oath">
                <h2>爱情宣言</h2>
                <p class="sign">爱情宣言</p>
            </div>
        </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="blog-footer">
        <div class="powered"> Powered by <a target="_blank" href="">@ViewBag.SiteName</a></div>
        <div class="copyright">Copyright © 2012 <a href="http://foolin.diandian.com/">Foolin</a></div> 
    </div>
</div>
</body>
</html>

