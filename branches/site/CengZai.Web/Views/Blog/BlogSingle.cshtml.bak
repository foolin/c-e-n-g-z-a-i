@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Blog/_BlogLayout.cshtml";
    var blogUser = ViewBag.BlogUser as CengZai.Model.User;
    var blogArtList = ViewBag.BlogArtList as List<CengZai.Model.Article>;
}

    <!--内容区域-->
    <div class="article well">
    <div class="row-fluid">
        <!--blog content-->
        <div class="span12 @(blogUser.Sex == 2 ? "girl":"boy")">
        @if (blogArtList != null)
        {
            for (int i = 0; i < blogArtList.Count; i++)
            {
              <dl>
                <dt class="title">
                    @if (!string.IsNullOrEmpty(blogArtList[i].Title))
                    {
                        @Html.ActionLink(blogArtList[i].Title, "Article", new { username = blogUser.Username, artid = blogArtList[i].ArtID });
                    }
                </dt>
                <dd class="content">@Html.GetHtmlSubstring(blogArtList[i].Content, 200)@*@MvcHtmlString.Create(boyArtList[i].Content)*@</dd>
                <dd class="info">
                    <div class="row-fluid">
                        <span class="span6">@Html.GetDateFormat(blogArtList[i].PostTime, "yyyy年M月d日")</span>
                        <span class="span6">@blogArtList[i].ViewCount 次浏览</span>
                    </div>
                </dd>
                @*<dd class="comment"></dd>*@
              </dl>
              <hr />
            }
        }
        </div>
        <!--/blog content-->
    </div>
    </div>
    <!--/内容区域-->

  <div class="pager">@Html.Pager()</div>

