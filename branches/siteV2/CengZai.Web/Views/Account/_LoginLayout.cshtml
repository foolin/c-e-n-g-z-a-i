@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.SiteName - @ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.SiteKeyword" />
    <meta name="description" content="@ViewBag.SiteDescription" />
    <link href="@Url.GetResourceUrl("/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.GetResourceUrl("/css/login.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.GetResourceUrl("/js/jquery.min.js")" type="text/javascript"></script>
</head>
<body>
<div class="container">
    <div class="header">
        <h1 class="logo"><a href="/">曾在网</a></h1>
        <div class="slogan">@ViewBag.SiteSlogan</div>
    </div>
    <hr />
    @RenderBody()
    <hr />
    @Html.Partial("_Footer")
</div>
</body>
</html>